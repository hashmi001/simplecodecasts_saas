<div class = "row">
  <%= form_for @contact do |f| %>
    
     <%= f.lable :name %>
     <%= f.text_field :name %>
  
     <%= f.lable :email %>
     <%= f.email_field :email %>
  
     <%= f.lable :comments %>
     <%= f.text_area :comments %>
    
  <%= f.submit 'Submit', class: 'btn btn-default' %> 
  <% end %> 
</div>